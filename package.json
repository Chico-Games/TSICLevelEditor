{
  "name": "biome-level-editor",
  "version": "1.0.0",
  "description": "Browser-based tile editor for creating biome levels for Unreal Engine",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright test --reporter=html && playwright show-report",
    "test:python": "python tests/selenium_test.py",
    "install-browsers": "playwright install"
  },
  "keywords": [
    "level-editor",
    "tile-editor",
    "biome",
    "unreal-engine",
    "gamedev",
    "canvas"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
